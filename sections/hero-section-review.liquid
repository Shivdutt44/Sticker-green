  /* Position trust block at bottom of banner */
  .banner {
    position: relative;
  }
  
  .banner__box {
  
    align-items: flex-start;
  }
  .trust-block {
    position: absolute;
    bottom: 20px;
    left: -32px;
    right: 0;
    color:white;
    text-align: center;
    z-index: 2;
    padding: 0;
    max-width: 80%;
    margin: 0 auto;
    display: flex;
    position: absolute;
    bottom: 20px;
    gap: 10px;
    font-size: 1.1rem;
    align-items: center;
  }
  
  @media screen and (max-width: 749px) {
    .trust-block {
      /* max-width: 90%; */
      bottom: 0px !important;
      padding: 0;
    }
  }
  
  /* Mobile image display */
  .banner__media-image--mobile {
    display: none;
  }
  
  @media screen and (max-width: 749px) {
    .banner__media-image--mobile {
      display: block;
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    
    .banner__media-image--desktop {
      display: none;
    }
    
    /* Mobile banner height */
    .banner--mobile-small {
      min-height: 30rem;
    }
    
    .banner--mobile-medium {
      min-height: 40rem;
    }
    
    .banner--mobile-large {
      min-height: 50rem;
    }
    
    /* Disable adapt padding on mobile when mobile height is set */
    .banner--adapt .banner__media::before {
      padding-bottom: 0 !important;
    }
  }
