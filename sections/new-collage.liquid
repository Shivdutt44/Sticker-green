{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  /* CSR-specific styles */
  .csr-collage-wrapper {
    background-color: {{  section.settings.background_color}};
    color: #ffffff;
    padding: 40px;
  }
  
  .csr-collage-button-wrapper {
    display: flex;
    justify-content: center;
  }
  .csr-collage-heading {
    font-size: 36px;
    text-align: center;
    margin-bottom: 24px;
    color: #ffffff;
  }
  
  .csr-collage-button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto 40px;
    padding: 12px 24px;
    border: 2px solid #ffffff;
    border-radius: 360px;
    background-color: transparent;
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 500;
  }
  
  .csr-collage-button:hover {
    background-color: #ffffff;
    color: #000000;
  }
  
  .csr-collage-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }
  
  .csr-collage-card {
    border-radius: 16px;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .csr-collage-card:hover {
    transform: scale(1.02);
    box-shadow: 0 10px 20px rgba(0,0,0,0.3);
  }
  
  .csr-collage-card-inner {
    padding: 0;
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    height: 100%;
  }
  
  /* Image container */
  .csr-collage-card-image-container {
    position: relative;
    overflow: hidden;
  }
  
  .csr-collage-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .csr-collage-card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.1) 100%);
    z-index: 1;
  }
  
  /* Content area */
  .csr-collage-card-content {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .csr-collage-card-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1px;
  }
  
  .csr-collage-card-description {
    font-size: 12px;
    margin-bottom: 12px;
  }
  
  .csr-collage-card-button {
    display: inline-block;
    padding: 8px 16px;
    background-color: rgba(255,255,255,0.2);
    border: 1px solid rgba(255,255,255,0.5);
    border-radius: 8px;
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 14px;
    align-self: flex-start;
    margin-top: auto;
  }
  
  .csr-collage-card-button:hover {
    background-color: #ffffff;
    color: #000000;
  }
  
  .csr-collage-card-plus-icon {
    position: absolute;
    top: 15px;
    right: 15px;
    width: 36px;
    height: 36px;
    background-color: rgba(255,255,255,0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    color: #000000;
    text-decoration: none;
    z-index: 3;
    transition: all 0.3s ease;
  }
  
  .csr-collage-card-plus-icon:hover {
    background-color: #ffffff;
    transform: scale(1.1);
  }
  
  .csr-collage-card-icon-top {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    font-size: 30px;
    color: #000000;
  }
  
  /* Responsive adjustments */
  @media screen and (max-width: 989px) {
    .csr-collage-grid {
      flex-direction: column;
    }
    
    .csr-collage-card {
      width: 100% !important;
      height: auto !important;
      margin-bottom: 20px;
    }
    
    .csr-collage-card-content {
      flex-direction: column;
    }
    
    .csr-collage-card-column-left,
    .csr-collage-card-column-right {
      padding: 0;
    }
    
    .csr-collage-card-column-left {
      margin-bottom: 15px;
    }
    
    .csr-collage-card-inner {
      min-height: 250px;
    }
    
    .csr-collage-card-icon-top {
      width: 50px;
      height: 50px;
      font-size: 24px;
    }
  }
  
  @media screen and (max-width: 749px) {
    .csr-collage-wrapper {
      padding: 20px;
    }
    
    .csr-collage-heading {
      font-size: 28px;
    }
    
    .csr-collage-button {
      padding: 10px 20px;
      font-size: 14px;
    }
    
    .csr-collage-card-title {
      font-size: 20px;
    }
    
    .csr-collage-card-description {
      font-size: 14px;
    }
    
    .csr-collage-card-image-container {
      height: 180px !important;
    }
  }
