<div class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="{% if section.settings.heading == blank %} no-heading{% endif %} section-{{ section.id }}-padding">
    <div class="csr-collage-wrapper">
      <div class="page-width">
      <h2 class="csr-collage-heading">{{ section.settings.heading | escape }}</h2>
      
      <div class="csr-collage-button-wrapper">
        <a href="{{ section.settings.button_link }}" class="csr-collage-button">
          {{ section.settings.button_text | escape }}
        </a>
      </div>
      
      <div class="csr-collage-grid">
        {% for block in section.blocks %}
          {% if block.type == 'csr_card_type1' %}
            <!-- Block Type 1: Image with Two Columns -->
            <div class="csr-collage-card" 
                 style="width: {{ block.settings.desktop_width }}%; height: {{ block.settings.desktop_height }}px; background-color: {{ block.settings.background_color }};" 
                 {{ block.shopify_attributes }}>
              <div class="csr-collage-card-inner">
                <div class="csr-collage-card-image-container" 
                     style="height: {{ block.settings.image_height }}px; border-radius: {{ block.settings.border_radius }}px;">
                  <img 
                    srcset="{%- if block.settings.image.width >= 550 -%}{{ block.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
                      {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                      {%- if block.settings.image.width >= 990 -%}{{ block.settings.image | image_url: width: 990 }} 990w,{%- endif -%}
                      {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                      {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                      {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                    src="{{ block.settings.image | image_url: width: 1500 }}"
                    sizes="(min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - 100px) * {{ block.settings.desktop_width | divided_by: 100.0 }}), (min-width: 750px) calc((100vw - 100px) * {{ block.settings.desktop_width | divided_by: 100.0 }}), calc(100vw - 30px)"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    class="csr-collage-card-image"
                  >
                </div>
                <div class="csr-collage-card-content">
                  <div class="csr-collage-card-column-left">
                    {%- if block.settings.title != blank -%}
                      <h3 class="csr-collage-card-title" style="color: {{ block.settings.text_color }};">{{ block.settings.title | escape }}</h3>
                    {%- endif -%}
                  </div>
                  <div class="csr-collage-card-column-right">
                    {%- if block.settings.description != blank -%}
                      <div class="csr-collage-card-description" style="color: {{ block.settings.text_color }};">{{ block.settings.description }}</div>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </div>
            
          {% elsif block.type == 'csr_card_type2' %}
            <!-- Block Type 2: Background Image with Plus Icon -->
            <div class="csr-collage-card" 
                 style="width: {{ block.settings.desktop_width }}%; height: {{ block.settings.desktop_height }}px;" 
                 {{ block.shopify_attributes }}>
