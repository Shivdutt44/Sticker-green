{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .card--card {
    border:none !important;
  }
  
  /* Tab styles */
  .collection-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 30px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    padding-bottom: 15px;
  }
  
  .collection-tab {
    padding: 10px 20px;
    background-color: #f5f5f5;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    font-size: 16px;
    transition: all 0.3s ease;
  }
  
  .collection-tab:hover {
    background-color: #eaeaea;
  }
  
  .collection-tab.active {
    background-color: #000;
    color: #fff;
  }
  
  .collection-tab-content {
    display: none;
  }
  
  .collection-tab-content.active {
    display: block;
  }
  
  @media screen and (max-width: 749px) {
    .collection-tabs {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE and Edge */
    }
    
    .collection-tabs::-webkit-scrollbar {
      display: none; /* Chrome, Safari, Opera */
    }
    
    .collection-tab {
      white-space: nowrap;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-list-wrapper page-width isolate{% if show_mobile_slider %} page-width-desktop{% endif %}{% if section.settings.title == blank %} no-heading{% endif %}{% if section.settings.show_view_all == false or section.blocks.size > collections.size %} no-mobile-link{% endif %} section-{{ section.id }}-padding">
       
    {%- unless section.settings.caption == blank -%}
      <div class="m-0-a caption-wrapper">
          {{ section.settings.caption }}
      </div>
    {%- endunless -%}
    
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        <{{ section.settings.heading_size }} class="collection-list-title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</{{ section.settings.heading_size }}>
  
        {%- if section.settings.show_view_all and show_mobile_slider -%}
          <a href="{{ routes.collections_url }}" class="link underlined-link large-up-hide">{{ 'sections.collection_list.view_all' | t }}</a>
        {%- endif -%}
      </div>
    {%- endunless -%}
    
    <!-- Collection Tabs -->
    <div class="collection-tabs">
      {%- for block in section.blocks -%}
        {%- if block.type == 'tab' -%}
          <button class="collection-tab{% if forloop.first %} active{% endif %}" data-tab="{{ block.id }}">
            {{ block.settings.tab_title }}
          </button>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
    <!-- Tab Contents -->
    {%- for block in section.blocks -%}
      {%- if block.type == 'tab' -%}
        <div class="collection-tab-content{% if forloop.first %} active{% endif %}" id="tab-{{ block.id }}">
          <slider-component class="slider-mobile-gutter">
            <ul class="collection-list contains-card{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if section.settings.swipe_on_mobile %} slider slider--tablet grid--peek{% endif %} collection-list--12-items"
              id="Slider-{{ section.id }}-{{ block.id }}"
              role="list"
            >
              {%- liquid
                assign columns = 12
                if columns > 3
                  assign columns = 3
                endif
              -%}
              
              {%- for i in (1..12) -%}
                {%- capture collection_handle %}collection_{{ i }}{% endcapture -%}
                {%- assign collection = collections[block.settings[collection_handle]] -%}
                
                {%- if collection != blank -%}
                  {%- capture image_handle %}collection_{{ i }}_image{% endcapture -%}
                  {%- assign custom_image = block.settings[image_handle] -%}
                  
                  {%- capture tag_handle %}collection_{{ i }}_tag{% endcapture -%}
                  {%- assign tag = block.settings[tag_handle] -%}
                  
                  <li id="Slide-{{ section.id }}-{{ block.id }}-{{ forloop.index }}" class="collection-list__item grid__item{% if show_mobile_slider %} slider__slide{% endif %}{% if collection.featured_image == nil and custom_image == nil %} collection-list__item--no-media{% endif %}">
                    {% render 'card-collection', 
                      card_collection: collection, 
                      media_aspect_ratio: section.settings.image_ratio, 
                      columns: columns,
                      custom_image: custom_image,
                      tag: tag
                    %}
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
            
            {%- if show_mobile_slider -%}
              <div class="slider-buttons no-js-hidden">
                <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
                <div class="slider-counter caption">
                  <span class="slider-counter--current">1</span>
                    <span aria-hidden="true"> / </span>
                    <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                  <span class="slider-counter--total">{{ block.settings.collections_count }}</span>
                </div>
                <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
              </div>
            {%- endif -%}
          </slider-component>
        </div>
      {%- endif -%}
    {%- endfor -%}
  
    {%- if section.settings.show_view_all -%}
      <div class="center collection-list-view-all{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
        <a href="{{ routes.collections_url }}" class="button">{{ 'sections.collection_list.view_all' | t }}</a>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.collection-tab');
    const tabContents = document.querySelectorAll('.collection-tab-content');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // Remove active class from all tabs and contents
        tabs.forEach(t => t.classList.remove('active'));
        tabContents.forEach(c => c.classList.remove('active'));
        
        // Add active class to clicked tab
        tab.classList.add('active');
        
        // Show corresponding content
        const tabId = tab.getAttribute('data-tab');
        const content = document.getElementById(`tab-${tabId}`);
        if (content) {
          content.classList.add('active');
          
          // Reinitialize slider for the active tab
          const sliderComponent = content.querySelector('slider-component');
          if (sliderComponent) {
            // Reinitialize slider
            const slider = sliderComponent.querySelector('.slider');
            if (slider && typeof slider.reload === 'function') {
              slider.reload();
            }
          }
        }
      });
    });
  });
</script>

