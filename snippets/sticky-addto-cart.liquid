<script>
  $(window).scroll(function (event) {
    var height = $(window).height();
    var scroll = $(window).scrollTop();
    //console.log(scroll + " " + height);
    if(scroll > height){
     $(".customaddtocart-sticky").addClass("show");
    } else {
     $(".customaddtocart-sticky").removeClass("show");
    }
  });
setInterval(()=>{
    document.querySelector("#myprice").innerHTML = document.querySelector("#priceTicker").innerHTML;
},500);
</script>