<style>
.customaddtocart-sticky {
	position: fixed;
	width: 100%;
	left:0;
	bottom:-100%;
	/* min-height: 70px; */
    padding: 5px 20px;
	background: white;    
	box-shadow: 0px 2px 10px #27272780;
    -webkit-box-shadow: 0px 2px 10px #27272780;
    transition: 0.6s;
    -moz-box-shadow: 0px 2px 10px #27272780;
}
  .customaddtocart-sticky.show{
	bottom:0;
	transition: 0.6s;
}
  .custom-container {
    display: flex;
    align-items: center;
    justify-content: space-around;
}
  .custom-details {
    display: flex;
    align-items: center;
    gap:30px;
}
  .prod-image {
    display: flex;
    /* gap: 30px; */
}
 .custom-form {
    display: flex;
    gap: 30px;
}
 
  .customaddtocart-sticky select,
  .customaddtocart-sticky input,
  .customaddtocart-sticky button {
    height: 40px;
    margin: 0 5px;
    vertical-align: middle;
  }
 
  .customaddtocart-sticky input {
    width: 60px;
    text-align: center;
  }
 
  .customaddtocart-sticky button {
    padding: 0 7rem;
    background-color: #306464; /* Change the button background color */
    color: #fff; /* Change the button text color */
    border: none; /* Remove the button border */
    cursor: pointer; /* Add a pointer cursor */
  }
  @media screen and (max-width:1160px)
  {
.prod-title{
  display:none;
}
    .variant-id{
       display:none;
    }
    .custom-quantity{
       display:none;
    }

    
  }
  @media screen and (max-width:600px)
  {
        .custom-details{
      display:none;
    }
        .custom-form{
      width:100%;
    }
      button.btn.btn-small {
    width: 100%;
}
    .addto-cat-button{
      width:100%;
    }
    .customaddtocart-sticky button{
      padding:0px!important;
      margin:0px!important;
    }
  }
  .custom-price {
    display: flex;
}
</style>

